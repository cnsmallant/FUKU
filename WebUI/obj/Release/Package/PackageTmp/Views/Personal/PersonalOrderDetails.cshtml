@{
    ViewBag.Title = "订单详细";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <div class="pro_bq">首页><span>会员中心</span></div>
    @Html.Partial("LfetPartial")
    <div id="main-con">
        <div id="page-tit">
            <p class="font06">订单管理</p>

        </div>
        <div id="con">
            <div style="width: 50%;float: left;margin-top:15px;">
                <p class="font_c02"><span>发货单号：</span>@ViewBag.shop_order_shipmentnumber</p>
            </div>
            <div class="clear_float"></div>
            <div class="font_c02" style="display: block;width: 100%;">
                <div class="dingdan_hao"><span>订单号：@ViewBag.shop_order_code </span><span>@ViewBag.user_address_name</span> <span>@ViewBag.shop_order_buydate</span></div>
                <table border="0" cellspacing="0" cellpadding="0" class="order" style="width: 885px; margin-left: 30px;">

                    <tr id="tab_head">
                        <td class="orderState">订单状态</td>
                        <td class="buyPro">购买产品</td>
                        <td>数量</td>
                        <td>时间</td>
                        <td>操作</td>
                    </tr>
                    @foreach (var item in ViewBag.olist)
                    {
                        <tr>
                            <td class="orderState" style="vertical-align: top;"><a href="" style="color: #e60012">@ViewBag.shop_order_status</a></td>
                            <td class="buyPro">
                                <div class="buyImg">
                                    <img src="@item.shop_order_id" class="buy-pro" /><span>@item.shop_orderdetail_id</span>
                                    <span>数量：@item.shop_orderdetail_num</span>
                                    <span class="cont12">&yen;：@item.shop_orderdetail_total</span>
                                </div>

                            </td>
                            <td class="proNums" style="vertical-align: top;">@item.shop_orderdetail_num</td>
                            <td class="buyTime" style="vertical-align: top;">
                                <span>@ViewBag.shop_order_buydate</span>
                               
                            </td>
                            <td class="buycz" style="vertical-align: top;">
                                <a href="">申请售后></a>
                                <a href="">评价商品></a>
                            </td>
                        </tr>
                    }
               
          
                </table>
                <div class="dingdan_heji"><span>商品总额：<strong style="color:#e60012;">&yen;@ViewBag.tprice</strong></span><span>商品数量：@ViewBag.shop_order_waynum 件</span> <span><strong>合计</strong></span></div>
            </div>
            <div id="count" style="margin-top: 40px;margin-right:60px;">
                <table border="0" cellspacing="0" cellpadding="0">

                    <tr><td class="td01">数量：</td><td>@ViewBag.shop_order_waynum 件</td></tr>
                    <tr><td class="td01">商品总金额：</td><td>￥@ViewBag.tprice</td></tr>
                    <tr><td class="td01">+运费：</td><td>￥@ViewBag.yunfei</td></tr>
                    <tr><td class="td01">-节俭金额：</td><td>￥0.00</td></tr>
                    <tr><td class="td01">-优惠券抵扣：</td><td>￥0.00</td></tr>
                    <tr><td class="td01" style="line-height: 60px !important;">应付总金额：</td><td><span class="title01">¥@ViewBag.shop_order_totalmoeny</span></td></tr>
                </table>

            </div>
            <div class="clear_float"></div>
            <div class="dingdan_sh">收货信息：</div>
            <table border="0" cellspacing="0" cellpadding="0" style="margin:10px 0 40px 35px;">

                <tr><td class="td011" style="text-align:left;">联系姓名：</td><td>@ViewBag.user_address_name</td></tr>
                <tr><td class="td011">收货地址：</td><td>@ViewBag.address </td></tr>
                <tr><td class="td011">联系方式：</td><td>@ViewBag.user_address_tel</td></tr>
                <tr><td class="td011">支付方式：</td><td><span id="shop_pay_text"></span></td></tr>

            </table>
            <div class="dingdan_sh">发票信息：</div>
            <table border="0" cellspacing="0" cellpadding="0" style="margin:10px 0 40px 35px;">

                <tr><td class="td011">发票类型：</td><td>普通发票</td></tr>
                <tr><td class="td011">发票抬头：</td><td>个人</td></tr>
                <tr><td class="td011">发票内容：</td><td>购买商品明细</td></tr>

            </table>
            <div class="clear_float"></div>
        </div>
    </div>
    <div class="clear_float"></div>
    @Html.Hidden("shop_pay_id");
</div>

<script>
    var shop_pay_id = $("#shop_pay_id");
    var shop_pay_text = $("#shop_pay_text");
    if (shop_pay_id.val() == "wx") {
        shop_pay_text.text("微信支付");
    }
    if (shop_pay_id.va() == "zfb") {
        shop_pay_text.text("支付宝");
    }

</script>
