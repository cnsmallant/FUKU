                        $("#tab2").attr("class", "acur");
                        $("#tab3").attr("class", "");
                        $("#tab4").attr("class", "");
                        $("#tab5").attr("class", "");
                        tab02.show();
                        tab01.hide();
                        tab03.hide();
                        tab04.hide();
                        tab05.hide();
                    });
                    tab3.click(function () {
                        $("#tab3").attr("class", "acur");
