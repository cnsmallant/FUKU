                        $("#tab5").attr("class", "acur");
                        $("#tab3").attr("class", "");
                        $("#tab4").attr("class", "");
                        $("#tab2").attr("class", "");
                        tab05.show();
                        tab02.hide();
                        tab03.hide();
                        tab04.hide();
                        tab01.hide();
                    });

