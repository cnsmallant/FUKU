@{
    ViewBag.Title = "第二步-生成商品";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}
<div class="div_left">
    @Html.Partial("LfetPartial")
</div>
<div class="div_right">
    <div class="item">
        <div class="ltitle">第二步-生成商品</div>

        <div class="tishi">
            <strong>操作说明：</strong><br />
            <span>
                1.可添加在线客服，访问统计，网站分享等第三方js脚本代码。支持同时使用多个代码。<br />
                2.请尽可能添加知名度高、认可度高的第三方代码，以确保网站安全。<br />
                3.由于添加不安全代码引起的网站访问异常、网站挂马等情况本公司概不负责。<br />
            </span>
        </div>
        @using (Html.BeginForm("AddGoodsSecondStep", "Goods", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <div class="con">

                <table width="800" border="0" cellspacing="0" cellpadding="0">

                    <tr>
                        <td width="100" height="40" align="right">市场价格：</td>
                        <td width="270">
                            @Html.TextBox("pro_skuitem_mprice", "", new { onkeyup=@"value=value.replace(/[^\d.]/g,'')" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100" align="right">商城价格：</td>
                        <td width="270">
                            @Html.TextBox("pro_skuitem_price", "", new { onkeyup = @"value=value.replace(/[^\d.]/g,'')" })

                        </td>
                    </tr>
                    <tr>
                        <td width="100" align="right">商品库存：</td>
                        <td width="270">
                            @Html.TextBox("pro_skuitem_stock", "", new { onkeyup = "this.value=this.value.replace(/[^0-9]/g,'')" })

                        </td>
                    </tr>

                    <tr>
                        <td width="100" align="right">商品封面：</td>
                        <td width="270">
                            @Html.TextBox("com_img_src", "", new { type = "file" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100" align="right"></td>
                        <td width="270">

                            @Html.Hidden("pro_sku_id")
                            @Html.Hidden("pro_item_id")
                            @Html.Hidden("pro_class_id")
                        </td>
                    </tr>

                    <tr>
                        <td height="30">&nbsp;</td>
                        <td height="40"><input class="btn" id="submit" type="submit" value="去上传商品图片" /></td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                </table>


            </div>}
    </div>
</div>
<script>
    var pro_item_title = $("#pro_skuitem_mprice");
    var pro_item_subtitle = $("#pro_skuitem_price");
    var pro_item_content = $("#pro_skuitem_stock");
    var com_img_src = $("#com_img_src");
    var submit = $("#submit");
    submit.click(function () {
        if (pro_skuitem_mprice.val() == null || pro_skuitem_mprice.val() == "") {
            alert("请输入市场价格");
            return false;
        }
        if (pro_skuitem_price.val() == null || pro_skuitem_price.val() == "") {
            alert("请输入商品价格");
            return false;
        }
        if (pro_skuitem_stock.val() == null || pro_skuitem_stock.val() == "") {
            alert("请输入商品库存");
            return false;
        }
        if (com_img_src.val() == null || com_img_src.val() == "") {
            alert("请选择商品封面");
            return false;
        }
    });

</script>
