@using EFClassLibrary
@model PagedList<pro_comment>
@using Webdiyer.WebControls.Mvc;
@{
    ViewBag.Title = "评论管理";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="div_left">
    @Html.Partial("LfetPartial")

</div>
<div class="div_right">
    <div class="list">
        <div class="ltitle">评论管理</div>
        <div class="lsec">
        </div>
        <div class="lpaixu">
            <ul></ul>
        </div>

        <table class="tab">
            <tr class="thead">
                <td>评论内容</td>
                <td>商品名称</td>
                <td>操作</td>
            </tr>
            <tr class="tsf">
                <td colspan="11"></td>
            </tr>

            @foreach (var item in Model)
            {
                <tr >
                    <td>@item.pro_comment_content</td>
                    <td>@item.pro_sku_code</td>
                    <td><a href="@Url.Action("OrderCommentDel", "Order", new { pro_comment_id = @item.pro_comment_id })" onclick="return window.confirm('确认删除?')">删除</a></td>
                </tr>
            }
            <tr class="txf">
                <td colspan="11">
                    <div class="fenye">
                        @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageid", NumericPagerItemCount = 5, ContainerTagName = "ul", CssClass = "pagination-digg", CurrentPagerItemTemplate = "<li class='active'><a href=\"#\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>", PageIndexBoxId = "pageIndexBox", AutoHide = false })
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
