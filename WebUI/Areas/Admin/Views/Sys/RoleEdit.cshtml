@using WebUI.Areas.Admin
@model FruitViewModel
@{
    ViewBag.Title = "编辑角色";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}
<div class="div_left">
    @Html.Partial("LfetPartial")
</div>
<div class="div_right">
    <div class="item">
        <div class="ltitle">新建权限</div>

        <div class="tishi">
            <strong>操作说明：</strong><br />
            <span>
                1.可添加在线客服，访问统计，网站分享等第三方js脚本代码。支持同时使用多个代码。<br />
                2.请尽可能添加知名度高、认可度高的第三方代码，以确保网站安全。<br />
                3.由于添加不安全代码引起的网站访问异常、网站挂马等情况本公司概不负责。<br />
            </span>
        </div>
        @using (Html.BeginForm("EditRole", "Sys",FormMethod.Post))
        {
            <div class="con">

                <table width="800" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="100" height="40" align="right">角色名称：</td>
                        <td width="270">
                            @Html.TextBox("rolewname")
                        </td>
                    </tr>
                    <tr>
                        <td width="100" align="right">选择权限：</td>
                        <td>
                            @Html.CheckBoxListFor(model => model.PostedFruits.FruitIds,
                                  model => model.AvailableFruits,
                                  fruit => fruit.Id,
                                  fruit => fruit.Name,
                                  model => model.SelectedFruits,
                                  Position.Vertical)
                        </td>
                    </tr>
                    <tr>
                        <td height="30">&nbsp;</td>
                        <td height="40"><input class="btn" id="submit" type="submit" value="保　存" /></td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                </table>
                @Html.Hidden("chestr", "")
                @Html.Hidden("roleid")
            </div>}
    </div>
</div>
<script src="~/Areas/Admin/js/JavaScript_Role.js"></script>
