@using EFClassLibrary
@{
    ViewBag.Title = "管理人员列表";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="div_left">
    @Html.Partial("LfetPartial")

</div>
<div class="div_right">
    <div class="list">
        <div class="ltitle">管理人员</div>

        <div class="lpaixu">
            <ul>
               
                <li><a href="@Url.Action("AdminCreate", "Sys")">新建</a></li>
                
            </ul>

        </div>

        <table class="tab">
            <tr class="thead">
                <td>用户名称</td>
                <td>用户角色</td>
                <td>用户状态</td>
                <td>操作日期</td>
                <td>操作</td>
            </tr>
            <tr class="tsf">
                <td colspan="11"></td>
            </tr>

            @foreach (var item in ViewBag.list)
            {
                <tr>
                    <td>@item.sys_admin_name</td>
                    <td>
                        @item.sys_admin_rolename
                    </td>
                    <td>
                        @item.sys_admin_satatu
                    </td>
                    <td>@item.sys_admin_editdate</td>
                    <td>
                        <a href="@Url.Action("AdminEdit", "Sys", new { sys_admin_id = item.sys_admin_id })" sty style="color:green">修改</a>
                        <a href="@Url.Action("AdminLogout", "Sys", new { sys_admin_id = item.sys_admin_id, satat = 0 })" sty style="color:green">注销</a>
                        <a href="@Url.Action("AdminLogout", "Sys", new { sys_admin_id = item.sys_admin_id, satat = 1 })" sty style="color:green">恢复</a>
                    </td>
                </tr>

            }



            <tr class="tfoot"></tr>

        </table>
    </div>
</div>
