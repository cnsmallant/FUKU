@{
    ViewBag.Title = "新建管理人员";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}


<div class="div_left">
    @Html.Partial("LfetPartial")
</div>
<div class="div_right">
    <div class="item">
        <div class="ltitle">新建管理人员</div>

        <div class="tishi">
            <strong>操作说明：</strong><br />
            <span>
                1.可添加在线客服，访问统计，网站分享等第三方js脚本代码。支持同时使用多个代码。<br />
                2.请尽可能添加知名度高、认可度高的第三方代码，以确保网站安全。<br />
                3.由于添加不安全代码引起的网站访问异常、网站挂马等情况本公司概不负责。<br />
            </span>
        </div>
        @using (Html.BeginForm("AddAdmin", "Sys", FormMethod.Post))
        {
            <div class="con">
                <table width="800" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="100" height="40" align="right">用户名称：</td>
                        <td width="270">
                            @Html.TextBox("sys_admin_name")
                        </td>
                    </tr>
                    <tr>
                        <td width="100" align="right">登录密码：</td>
                        <td width="270">
                            @Html.TextBox("sys_admin_pwd", "", new { type = "password" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100" align="right">确认密码：</td>
                        <td width="270">
                            @Html.TextBox("sys_admin_pwdreg", "", new { type = "password" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100" align="right">选择角色：</td>
                        <td width="270">
                            @Html.DropDownList("role", "请选择")
                        </td>
                    </tr>
                    <tr>
                        <td height="30">&nbsp;</td>
                        <td height="40"><input class="btn" id="submit" type="submit" value="保　存" /></td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                </table>
                @Html.Hidden("sys_admin_role");
            </div>}
    </div>
</div>
<script src="~/Areas/Admin/js/JavaScript_Admin.js"></script>