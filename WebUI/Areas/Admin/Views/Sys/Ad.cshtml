@model  IList<WebUI.Areas.Admin.Controllers.SysController.Ad_info>
@{
    ViewBag.Title = "巨幕广告";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="div_left">
    <div class="left">
        @Html.Partial("LfetPartial")

    </div>


</div>
<div class="div_right">
    <div class="list">
        <div class="ltitle">巨幕广告</div>
        <div class="lpaixu">
            <ul>
                <li style="width:auto">
                    <a href="@Url.Action("AdCreate","Sys")">新建</a>
                </li>

            </ul>

        </div>

        <table class="tab">
            <tr class="thead">
                <td>缩略图</td>
                <td>广告标题</td>
                <td>广告类别（pc-电脑端 ph-手机端）</td>
                <td>广告链接</td>
                <td>开始时间</td>
                <td>结束时间</td>
                <td>录入日期</td>
                <td>操作</td>
            </tr>
            <tr class="tsf">
                <td colspan="11"></td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td> <a href="@Url.Action("Edit", "Images", new { com_img_fk = @item.ad_id, returnurl = Server.UrlEncode(Request.Url.ToString()) })" title="点击修改图片"><img src="@item.com_img_src" width="150" /></a> </td>
                    <td>@item.ad_title</td>
                    <td>@item.ad_type</td>
                    <td>@item.ad_img</td>
                    <td>@item.ad_sdate</td>
                    <td>@item.ad_edate</td>
                    <td>@item.ad_date</td>
                    <td>
                        <a href="@Url.Action("AdDel", "Sys", new { com_banner_id = @item.ad_id })" st style="color:red" onclick="return window.confirm('确认删除?')">删除</a>
                    </td>
                </tr>

            }
            <tr class="txf">
                <td colspan="11">
                </td>
            </tr>
        </table>
    </div>
</div>
