@model PagedList<WebUI.Controllers.PersonalController.user_collects>
@using Webdiyer.WebControls.Mvc;

@{
    ViewBag.Title = "会员中心-我的收藏";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <div class="pro_bq">首页><span>会员中心</span></div>
    @Html.Partial("LfetPartial")
    <div id="main-con">
        <div id="page-tit">
            <p class="font06">我的收藏</p>
        </div>
        <div id="con">
            <div id="inner_M">
                <a href="" class="cur-inner">全部<img src="/img/innerM.jpg" /></a><a href="">促销商品</a><a href="">普通商品</a>
            </div>
            <div class="lljl_con">

                @foreach (var item in Model)
                {
                    <div class="lljl_kk wdsc_kk">
                        <img src="@item.pro_sku_covimg" style="width:205px;height:205px" />
                        <p>
                            @item.pro_skuitem_id<br />
                            <span>&yen;@item.pro_skuitem_price</span>
                        </p>
                        <div class="aj">
                            <a href="@Url.Action("GoodsDetails", "Goods", new { id = @item.pro_sku_code })"><img src="/img/wdsc_jr.jpg" /></a>
                            <a href="@Url.Action("PersonalCollectDel", "Personal", new { user_collect_id = @item.user_collect_id })"><img src="/img/wdsc_del.jpg" /></a>
                        </div>
                    </div>

                }

                <div class="clear_float"></div>
            </div>
        </div>
        <div class="pageState">@Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageIndx", NumericPagerItemCount = 10, ContainerTagName = "div", CssClass = "jogger", CurrentPagerItemTemplate = "<span class='current'>{0}</span>", DisabledPagerItemTemplate = "<span class=\"disabled\"><a>{0}</a></span>", PagerItemTemplate = "{0}", PageIndexBoxId = "pageIndexBox", AutoHide = false, PrevPageText = "◀ 上一页", NextPageText = "下一页 ▶" })</div>
    </div>
    <div class="clear_float"></div>
</div>

